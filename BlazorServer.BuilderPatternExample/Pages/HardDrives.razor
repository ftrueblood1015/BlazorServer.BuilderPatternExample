@page "/harddrives";
@using BlazorServer.BuilderPatternExample.Domain.Models;

<MudDataGrid @attributes='Splats.DataGrid("HardDrives")' T="HardDrive" Items="@HardDriveList" SortMode="SortMode.Multiple" Filterable="true" QuickFilter="@QuickFilter" Hideable="true">
    <ToolBarContent>
        <MudText @attributes='Splats.PageHeader("HardDrives")'>Hard Drives</MudText>
        <MudSpacer />
        <MudTextField @attributes='Splats.SearchField()' @bind-Value="SearchString" Class="mt-0"></MudTextField>
    </ToolBarContent>
    <Columns>
        <PropertyColumn Property="x => x.Description" Title="Description" Sortable="true" Filterable="false" />
        <PropertyColumn Property="x => x.Cost" Title="Cost" Sortable="true" Filterable="false" InitialDirection="SortDirection.Ascending" />
        <PropertyColumn Property="x => x.Type" Title="Type" Sortable="true" Filterable="false" />
        <PropertyColumn Property="x => x.Size" Title="Size" Sortable="true" Filterable="false" />
    </Columns>
    <PagerContent>
        <MudDataGridPager T="HardDrive" />
    </PagerContent>
</MudDataGrid>