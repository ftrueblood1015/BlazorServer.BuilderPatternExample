        <MudIcon Icon="@Icons.Material.Outlined.Speed" Title="Dashboard" />
        Dashboard
    </MudNavLink>
    <MudNavLink Href="/custompcs" Match="NavLinkMatch.All">
        <MudIcon Icon="@Icons.Material.Outlined.Computer" Title="Custom Pcs" />
        Custom Pcs
    </MudNavLink>
    <MudNavLink Href="/pclevels" Match="NavLinkMatch.All">
        <MudIcon Icon="@Icons.Material.Outlined.Stairs" Title="Pc Levels" />
        Pc Levels
    </MudNavLink>
    <MudNavLink Href="/cpus" Match="NavLinkMatch.All">
        <MudIcon Icon="@Icons.Material.Outlined.Cached" Title="Cpus" />
        Cpus
    </MudNavLink>
    <MudNavLink Href="/gpus" Match="NavLinkMatch.All">
        <MudIcon Icon="@Icons.Material.Outlined.GraphicEq" Title="Gpus" />
